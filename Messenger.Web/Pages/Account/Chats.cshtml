@page
@model Messenger.Web.Pages.Account.ChatsModel
@{
    ViewData["Title"] = "Чаты";
    Layout = null;
}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/feather-icons"></script>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding: 0;
            overflow: hidden;
        }

        .guap-gradient {
            background: linear-gradient(135deg, #1e3a8a 0%, #3b82f6 100%);
        }

        .chat-item:hover {
            background-color: #f3f4f6;
        }

        .chat-item.active {
            background-color: #e5e7eb;
        }

        .attachment {
            color: #3b82f6;
            text-decoration: underline;
        }

        .modal {
            position: fixed;
            inset: 0;
            background: rgba(0,0,0,.5);
            backdrop-filter: blur(4px);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 50;
            opacity: 0;
            visibility: hidden;
            transition: all .3s ease;
        }

            .modal.show {
                opacity: 1;
                visibility: visible;
            }

        #connection-status .w-3 {
            transition: background-color 0.3s ease;
        }
    </style>
</head>
<body class="h-screen">
    <script>
        const JWT_TOKEN = '@(HttpContext.Session.GetString("JWT_SECRET") ?? "")';
        if (!JWT_TOKEN || JWT_TOKEN === '') {
            document.write('<div class="p-8 text-center text-red-600 text-xl">Ошибка авторизации. <a href="/Authorization/Login" class="underline">Войти заново</a></div>');
        }
    </script>

    <div class="flex h-full">
        <!-- Sidebar -->
        <div class="w-80 bg-white border-r border-gray-200 flex flex-col">
            <div class="p-4 border-b border-gray-200 flex items-center justify-between">
                <div class="flex items-center space-x-3">
                    <div class="guap-gradient text-white w-10 h-10 rounded-full flex items-center justify-center">
                        <i data-feather="message-square" class="w-5 h-5"></i>
                    </div>
                    <h1 class="font-bold text-lg">GUAP Messenger</h1>
                </div>
                <a asp-page="/Account/Settings" class="text-gray-500 hover:text-gray-700"><i data-feather="settings" class="w-5 h-5"></i></a>
            </div>

            <div class="p-3 border-b border-gray-200 space-y-2">
                <div class="relative">
                    <input type="text" id="chat-search" placeholder="Поиск по чатам"
                           class="w-full pl-10 pr-4 py-2 bg-gray-100 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:bg-white">
                    <i data-feather="search" class="absolute left-3 top-2.5 text-gray-400 w-5 h-5"></i>
                </div>
                <button id="create-chat-btn" class="w-full guap-gradient text-white py-2 px-4 rounded-lg hover:opacity-90 transition flex items-center justify-center">
                    <i data-feather="plus" class="w-4 h-4 mr-2"></i> Создать чат
                </button>
            </div>

            <div class="flex-1 overflow-y-auto" id="chats-list">
                <div class="text-gray-500 p-4">Загрузка чатов...</div>
            </div>

            <div class="p-4 border-t border-gray-200">
                <div class="flex items-center space-x-3">
                    <img src="https://static.photos/people/200x200/4" alt="User" class="w-10 h-10 rounded-full">
                    <div>
                        <p class="font-medium">@Model.UserName</p>
                        <p class="text-xs text-gray-500">@Model.UserRole</p>
                    </div>
                    <div id="connection-status" class="relative ml-auto group">
                        <div id="status-dot" class="w-3 h-3 bg-gray-400 rounded-full"></div>
                        <div id="status-tooltip" class="absolute bottom-full right-0 mb-2 px-2 py-1 text-xs text-white bg-gray-800 rounded opacity-0 invisible group-hover:opacity-100 group-hover:visible transition">
                            Подключение...
                        </div>
                    </div>
                    <form asp-page="/Authorization/Logout" method="post" class="ml-2">
                        <button type="submit" class="text-gray-500 hover:text-red-600"><i data-feather="log-out" class="w-5 h-5"></i></button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Chat Area -->
        <div class="flex-1 flex flex-col">
            <div id="chat-header" class="p-4 border-b border-gray-200 flex items-center justify-between bg-white">
                <h2 id="chat-title" class="font-medium">Выберите чат</h2>
            </div>
            <div id="messages-container" class="flex-1 p-4 overflow-y-auto bg-gray-50">
                <div class="flex items-center justify-center h-full text-gray-500">
                    <p>Выберите чат для просмотра сообщений</p>
                </div>
            </div>
            <div class="p-3 border-t border-gray-200 bg-white">
                <div class="flex items-center space-x-2">
                    <label for="file-input" class="cursor-pointer text-gray-500 hover:text-gray-700"><i data-feather="paperclip" class="w-5 h-5"></i></label>
                    <input id="file-input" type="file" class="hidden" multiple>
                    <input id="message-input" type="text" placeholder="Напишите сообщение..."
                           class="flex-1 px-4 py-2 bg-gray-100 rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500 focus:bg-white">
                    <button id="send-button" class="text-gray-500 hover:text-gray-700">
                        <i data-feather="send" class="w-5 h-5"></i>
                    </button>
                </div>
                <div id="attached-files" class="text-sm text-gray-600 mt-2"></div>
            </div>
        </div>
    </div>

    <!-- Модальное окно создания чата -->
    <div id="create-chat-modal" class="modal">
        <div class="bg-white rounded-lg shadow-2xl w-full max-w-md p-6">
            <div class="flex justify-between items-center mb-6">
                <h3 class="text-xl font-semibold">Создать чат</h3>
                <button id="close-modal" class="text-gray-400 hover:text-gray-600">
                    <i data-feather="x" class="w-6 h-6"></i>
                </button>
            </div>

            <div class="space-y-5">
                <input type="text" id="chat-name" placeholder="Название чата" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">

                <div>
                    <label class="block text-sm font-medium mb-3">Тип чата</label>
                    <div class="flex gap-6">
                        <label class="flex items-center"><input type="radio" name="chat-type" value="private" checked class="mr-2"><span>Приватный</span></label>
                        <label class="flex items-center"><input type="radio" name="chat-type" value="group" class="mr-2"><span>Групповой</span></label>
                    </div>
                </div>

                <div>
                    <label class="block text-sm font-medium mb-2">Участники</label>
                    <div class="relative">
                        <input type="text" id="user-search" placeholder="Начните вводить имя..." autocomplete="off"
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <div id="user-search-results" class="absolute z-10 w-full mt-1 bg-white border border-gray-200 rounded-lg shadow-lg max-h-64 overflow-y-auto hidden"></div>
                    </div>
                    <div id="selected-users" class="mt-3 flex flex-wrap gap-2"></div>
                </div>
            </div>

            <div class="mt-8 flex justify-end gap-3">
                <button id="cancel-create" class="px-5 py-2.5 text-gray-600 hover:text-gray-800 font-medium">Отмена</button>
                <button id="confirm-create" class="px-6 py-2.5 bg-blue-600 text-white rounded-lg hover:bg-blue-700 font-medium">Создать</button>
            </div>
        </div>
    </div>

    <script>
        feather.replace();
        const API_BASE = 'https://localhost:7045/api';
        const HUB_URL = 'https://localhost:7045/hubs/chat';
        const token = JWT_TOKEN;

        // Элементы
        const chatsList = document.getElementById('chats-list');
        const messagesContainer = document.getElementById('messages-container');
        const messageInput = document.getElementById('message-input');
        const sendButton = document.getElementById('send-button');
        const fileInput = document.getElementById('file-input');
        const attachedFiles = document.getElementById('attached-files');
        const createChatBtn = document.getElementById('create-chat-btn');

        // Модалка
        const modal = document.getElementById('create-chat-modal');
        const closeModalBtn = document.getElementById('close-modal');
        const cancelBtn = document.getElementById('cancel-create');
        const confirmBtn = document.getElementById('confirm-create');
        const chatNameInput = document.getElementById('chat-name');
        const userSearchInput = document.getElementById('user-search');
        const searchResults = document.getElementById('user-search-results');
        const selectedUsersContainer = document.getElementById('selected-users');

        let currentChatId = null;
        let selectedFiles = [];
        let connection = null;
        let isSending = false;
        let selectedUserIds = [];
        let lastQuery = '';
        let searchTimeout = null;

        // === Поиск пользователей (динамический) ===
        async function searchUsers() {
            const query = userSearchInput.value.trim();
            if (query.length < 2) {
                searchResults.classList.add('hidden');
                return;
            }
            if (query === lastQuery) return;
            lastQuery = query;

            searchResults.innerHTML = '<div class="p-4 text-center text-gray-500"><i data-feather="loader" class="w-5 h-5 animate-spin inline"></i> Поиск...</div>';
            searchResults.classList.remove('hidden');
            feather.replace();

            try {
                const res = await fetch(`${API_BASE}/users/search?query=${encodeURIComponent(query)}`, {
                    headers: { 'Authorization': `Bearer ${token}` }
                });
                const json = await res.json();

                searchResults.innerHTML = '';
                if (!json.isSuccess || !json.data || json.data.length === 0) {
                    searchResults.innerHTML = '<div class="p-4 text-gray-500 text-sm">Ничего не найдено</div>';
                    return;
                }

                json.data
                    .filter(u => !selectedUserIds.includes(u.id))
                    .slice(0, 8)
                    .forEach(user => {
                        const div = document.createElement('div');
                        div.className = 'p-3 hover:bg-gray-50 cursor-pointer flex items-center gap-3 transition';
                        div.innerHTML = `
                            <img src="${user.avatar || 'https://static.photos/people/200x200/default'}" class="w-10 h-10 rounded-full object-cover">
                            <span class="font-medium">${user.name}</span>
                        `;
                        div.onclick = () => selectUser(user);
                        searchResults.appendChild(div);
                    });

            } catch (err) {
                searchResults.innerHTML = '<div class="p-4 text-red-500 text-sm">Ошибка поиска</div>';
            }
        }

        function selectUser(user) {
            if (selectedUserIds.includes(user.id)) return;

            const isPrivate = document.querySelector('input[name="chat-type"]:checked').value === 'private';
            if (isPrivate && selectedUserIds.length >= 1) {
                alert('В приватном чате может быть только один участник');
                return;
            }

            selectedUserIds.push(user.id);

            const tag = document.createElement('div');
            tag.className = 'inline-flex items-center gap-2 px-3 py-2 rounded-full bg-blue-100 text-blue-800 text-sm font-medium';
            tag.innerHTML = `
                ${user.name}
                <button type="button" class="hover:bg-blue-200 rounded-full p-0.5">
                    <i data-feather="x" class="w-4 h-4"></i>
                </button>
            `;
            tag.querySelector('button').onclick = (e) => {
                e.stopPropagation();
                selectedUserIds = selectedUserIds.filter(id => id !== user.id);
                tag.remove();
                feather.replace();
            };
            selectedUsersContainer.appendChild(tag);
            feather.replace();

            userSearchInput.value = '';
            searchResults.classList.add('hidden');
        }

        userSearchInput.addEventListener('input', () => {
            clearTimeout(searchTimeout);
            searchTimeout = setTimeout(searchUsers, 300);
        });

        document.addEventListener('click', e => {
            if (!userSearchInput.contains(e.target) && !searchResults.contains(e.target)) {
                searchResults.classList.add('hidden');
            }
        });

        // === Создание чата ===
        async function createChat() {
            const name = chatNameInput.value.trim();
            const type = document.querySelector('input[name="chat-type"]:checked').value;

            if (!name) return alert('Введите название чата');
            if (selectedUserIds.length === 0) return alert('Выберите хотя бы одного участника');
            if (type === 'private' && selectedUserIds.length !== 1) return alert('В приватном чате должен быть ровно один участник');

            try {
                const res = await fetch(`${API_BASE}/chats/create-chat`, {
                    method: 'POST',
                    headers: {
                        'Authorization': `Bearer ${token}`,
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ name, type, userIds: selectedUserIds })
                });
                const json = await res.json();
                if (!res.ok || !json.isSuccess) throw new Error(json.error || 'Ошибка создания');

                modal.classList.remove('show');
                await loadChats();

                setTimeout(() => {
                    const newChat = [...document.querySelectorAll('.chat-item')]
                        .find(el => el.querySelector('h3')?.textContent.trim() === name);
                    newChat?.click();
                }, 500);

            } catch (err) {
                alert('Ошибка: ' + err.message);
            }
        }

        createChatBtn.onclick = () => {
            selectedUserIds = [];
            selectedUsersContainer.innerHTML = '';
            chatNameInput.value = '';
            userSearchInput.value = '';
            lastQuery = '';
            document.querySelector('input[value="private"]').checked = true;
            modal.classList.add('show');
            setTimeout(() => chatNameInput.focus(), 100);
        };

        closeModalBtn.onclick = cancelBtn.onclick = () => modal.classList.remove('show');
        confirmBtn.onclick = createChat;

        // === Остальное (SignalR, чаты, сообщения) ===
        function updateConnectionStatus(text, color) {
            const dot = document.getElementById('status-dot');
            const tooltip = document.getElementById('status-tooltip');
            if (tooltip) tooltip.textContent = text;
            dot.className = `w-3 h-3 rounded-full ${color === 'green' ? 'bg-green-500' : color === 'orange' ? 'bg-orange-500' : 'bg-red-500'}`;
        }

        async function startSignalR() {
            const url = `${HUB_URL}?access_token=${encodeURIComponent(token)}`;
            connection = new signalR.HubConnectionBuilder()
                .withUrl(url)
                .withAutomaticReconnect([0, 2000, 10000])
                .build();

            connection.on('ReceiveMessage', msg => {
                if (msg.chatId === currentChatId) {
                    appendMessage(msg);
                    scrollToBottom();
                }
            });

            connection.onreconnecting(() => updateConnectionStatus('Переподключение...', 'orange'));
            connection.onreconnected(() => { updateConnectionStatus('Онлайн', 'green'); rejoinCurrentChat(); });
            connection.onclose(() => { updateConnectionStatus('Отключено', 'red'); setTimeout(startSignalR, 5000); });

            try {
                await connection.start();
                updateConnectionStatus('Онлайн', 'green');
            } catch (err) {
                updateConnectionStatus('Ошибка', 'red');
                setTimeout(startSignalR, 5000);
            }
        }

        async function joinChat(id) { if (connection?.state === signalR.HubConnectionState.Connected) await connection.invoke('JoinChat', id).catch(() => {}); }
        async function leaveChat(id) { if (connection?.state === signalR.HubConnectionState.Connected) await connection.invoke('LeaveChat', id).catch(() => {}); }
        async function rejoinCurrentChat() { if (currentChatId) await joinChat(currentChatId); }

        async function loadChats() {
            try {
                const res = await fetch(`${API_BASE}/chats`, { headers: { 'Authorization': `Bearer ${token}` } });
                const json = await res.json();
                chatsList.innerHTML = !json.isSuccess || !json.data?.length
                    ? '<div class="p-4 text-gray-500">Чатов нет</div>'
                    : '';
                json.data?.forEach(chat => {
                    const div = document.createElement('div');
                    div.className = 'p-4 chat-item flex items-center space-x-3 cursor-pointer hover:bg-gray-100 transition rounded-lg mx-2';
                    div.dataset.chatId = chat.chatId || chat.id;
                    div.innerHTML = `
                        <div class="relative">
                            <img src="${chat.avatar || 'https://static.photos/people/200x200/default'}" class="w-12 h-12 rounded-full object-cover">
                            <span class="absolute bottom-0 right-0 w-3 h-3 ${chat.isOnline ? 'bg-green-500' : 'bg-gray-300'} rounded-full border-2 border-white"></span>
                        </div>
                        <div class="flex-1 min-w-0">
                            <h3 class="font-medium truncate">${chat.name || 'Без имени'}</h3>
                            <p class="text-sm text-gray-500 truncate">${chat.lastMessage || 'Нет сообщений'}</p>
                        </div>
                    `;
                    chatsList.appendChild(div);
                });
            } catch { chatsList.innerHTML = '<div class="p-4 text-red-500">Ошибка загрузки чатов</div>'; }
        }

        async function loadMessages(chatId) {
            messagesContainer.innerHTML = '<p class="text-center text-gray-500">Загрузка...</p>';
            try {
                const res = await fetch(`${API_BASE}/messages/${chatId}`, { headers: { 'Authorization': `Bearer ${token}` } });
                const json = await res.json();
                messagesContainer.innerHTML = '';
                (json.data || []).forEach(appendMessage);
                scrollToBottom();
            } catch {
                messagesContainer.innerHTML = '<p class="text-red-500 text-center">Ошибка загрузки сообщений</p>';
            }
        }

        function appendMessage(msg) {
            const isMine = msg.senderId === '@Model.UserId';
            const div = document.createElement('div');
            div.className = `mb-4 flex ${isMine ? 'justify-end' : 'justify-start'}`;
            div.innerHTML = `
                <div class="inline-block max-w-xs px-4 py-2 rounded-2xl shadow-sm ${isMine ? 'bg-blue-600 text-white' : 'bg-white text-gray-900'}">
                    ${msg.messageText ? `<p class="break-words">${msg.messageText}</p>` : ''}
                    <div class="text-xs mt-1 opacity-70">
                        ${msg.status === 'Read' ? 'Прочитано' : msg.status === 'Delivered' ? 'Доставлено' : 'Отправлено'}
                        ${msg.sentAt ? ' · ' + new Date(msg.sentAt).toLocaleTimeString('ru', { hour: '2-digit', minute: '2-digit' }) : ''}
                    </div>
                </div>
            `;
            messagesContainer.appendChild(div);
        }

        function scrollToBottom() { messagesContainer.scrollTop = messagesContainer.scrollHeight; }

        async function sendMessage() {
            if (isSending || !currentChatId) return;
            const text = messageInput.value.trim();
            if (!text && selectedFiles.length === 0) return;

            isSending = true;
            const oldIcon = sendButton.innerHTML;
            sendButton.innerHTML = '<i data-feather="loader" class="w-5 h-5 animate-spin"></i>';
            feather.replace();

            const form = new FormData();
            if (text) form.append('messageText', text);
            selectedFiles.forEach(f => form.append('files', f));

            try {
                const res = await fetch(`${API_BASE}/messages/${currentChatId}`, {
                    method: 'POST',
                    headers: { 'Authorization': `Bearer ${token}` },
                    body: form
                });
                const json = await res.json();
                if (!res.ok || !json.isSuccess) throw new Error(json.error || 'Ошибка');

                messageInput.value = '';
                selectedFiles = [];
                attachedFiles.innerHTML = '';
                fileInput.value = '';
            } catch (err) {
                alert('Не удалось отправить: ' + err.message);
            } finally {
                isSending = false;
                sendButton.innerHTML = oldIcon;
                feather.replace();
                messageInput.focus();
            }
        }

        chatsList.addEventListener('click', async e => {
            const item = e.target.closest('.chat-item');
            if (!item) return;
            const chatId = item.dataset.chatId;
            if (currentChatId === chatId) return;

            if (currentChatId) await leaveChat(currentChatId);
            currentChatId = chatId;
            document.querySelectorAll('.chat-item').forEach(i => i.classList.remove('active'));
            item.classList.add('active');
            document.getElementById('chat-title').textContent = item.querySelector('h3').textContent;

            await loadMessages(chatId);
            await joinChat(chatId);
        });

        sendButton.onclick = sendMessage;
        messageInput.addEventListener('keydown', e => {
            if (e.key === 'Enter' && !e.shiftKey) {
                e.preventDefault();
                sendMessage();
            }
        });

        fileInput.onchange = () => {
            selectedFiles = Array.from(fileInput.files);
            attachedFiles.innerHTML = selectedFiles.length
                ? selectedFiles.map(f => `<span class="attachment mr-2">${f.name}</span>`).join('')
                : '';
        };

        // Инициализация
        loadChats();
        startSignalR();

        const observer = new MutationObserver(() => feather.replace());
        observer.observe(document.body, { childList: true, subtree: true });
    </script>
</body>
</html>