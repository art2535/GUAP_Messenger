@page
@model Messenger.Web.Pages.Account.ChatsModel
@{
    ViewData["Title"] = "Чаты";
    Layout = null;
}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/feather-icons"></script>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding: 0;
            overflow: hidden;
        }

        .guap-gradient {
            background: linear-gradient(135deg, #1e3a8a 0%, #3b82f6 100%);
        }

        .chat-item:hover {
            background-color: #f3f4f6;
        }

        .chat-item.active {
            background-color: #e5e7eb;
        }

        .modal {
            position: fixed;
            inset: 0;
            background: rgba(0,0,0,.5);
            backdrop-filter: blur(4px);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 50;
            opacity: 0;
            visibility: hidden;
            transition: all .3s ease;
        }

            .modal.show {
                opacity: 1;
                visibility: visible;
            }

        .image-preview {
            max-width: 260px;
            max-height: 260px;
            border-radius: 16px;
            cursor: zoom-in;
            object-fit: cover;
            transition: transform .2s;
        }

            .image-preview:hover {
                transform: scale(1.05);
            }

        .file-attachment {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            background: rgba(0,0,0,0.06);
            padding: 10px 14px;
            border-radius: 14px;
            font-size: 13px;
        }

            .file-attachment i {
                width: 20px;
                height: 20px;
            }

        .lightbox {
            position: fixed;
            inset: 0;
            background: rgba(0,0,0,0.95);
            z-index: 100;
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            visibility: hidden;
            transition: all .3s;
        }

            .lightbox.show {
                opacity: 1;
                visibility: visible;
            }

            .lightbox img {
                max-width: 90vw;
                max-height: 90vh;
                border-radius: 16px;
                box-shadow: 0 20px 40px rgba(0,0,0,0.6);
            }

        .preview-attachment {
            position: relative;
            display: inline-block;
            margin: 4px;
        }

            .preview-attachment button {
                position: absolute;
                top: -6px;
                right: -6px;
                background: #ef4444;
                color: white;
                width: 20px;
                height: 20px;
                border-radius: 50%;
                font-size: 12px;
                border: none;
                cursor: pointer;
            }

        .modal {
            z-index: 1000 !important;
        }

        #chat-info-search-results {
            display: none;
        }

            #chat-info-search-results.show {
                display: block !important;
            }

        .lightbox {
            z-index: 2000 !important;
        }

        #connection-status .w-3 {
            transition: background-color 0.3s ease;
        }

        #user-search-results {
            position: absolute;
            z-index: 100;
            width: calc(100% - 2rem);
            left: 1rem;
            right: 1rem;
            margin-top: 0.25rem;
            background: white;
            border: 1px solid rgb(229 231 235);
            border-radius: 0.75rem;
            box-shadow: 0 10px 15px -3px rgba(0,0,0,0.1), 0 4px 6px -2px rgba(0,0,0,0.05);
            max-height: 16rem;
            overflow-y: auto;
            display: none;
        }

            #user-search-results.show {
                display: block;
            }
    </style>
</head>
<body class="h-screen">

    <script>
        const JWT_TOKEN = '@(HttpContext.Session.GetString("JWT_TOKEN") ?? "")';
        if (!JWT_TOKEN || JWT_TOKEN === '') {
            document.write('<div class="p-8 text-center text-red-600 text-xl">Ошибка авторизации. <a href="/Authorization/Login" class="underline">Войти заново</a></div>');
        }
    </script>

    <div class="flex h-full">
        <div class="w-80 bg-white border-r border-gray-200 flex flex-col">
            <div class="p-4 border-b border-gray-200 flex items-center justify-between">
                <div class="flex items-center space-x-3">
                    <div class="guap-gradient text-white w-10 h-10 rounded-full flex items-center justify-center">
                        <i data-feather="message-square" class="w-5 h-5"></i>
                    </div>
                    <h1 class="font-bold text-lg">GUAP Messenger</h1>
                </div>
                <a asp-page="/Account/Settings" class="text-gray-500 hover:text-gray-700"><i data-feather="settings" class="w-5 h-5"></i></a>
            </div>

            <div class="p-3 border-b border-gray-200 space-y-2">
                <div class="relative">
                    <input type="text" id="chat-search" placeholder="Поиск по чатам"
                           class="w-full pl-10 pr-10 py-2 bg-gray-100 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:bg-white transition">
                    <i data-feather="search" class="absolute left-3 top-2.5 text-gray-400 w-5 h-5"></i>
                    <button id="clear-search" class="absolute right-3 top-2.5 text-gray-400 hover:text-gray-600 hidden">
                        <i data-feather="x" class="w-5 h-5"></i>
                    </button>
                </div>
                <button id="create-chat-btn" class="w-full guap-gradient text-white py-2 px-4 rounded-lg hover:opacity-90 transition flex items-center justify-center">
                    <i data-feather="plus" class="w-4 h-4 mr-2"></i> Создать чат
                </button>
            </div>

            <div class="flex-1 overflow-y-auto" id="chats-list">
                <div class="text-gray-500 p-4">Загрузка чатов...</div>
            </div>

            <div class="p-4 border-t border-gray-200">
                <div class="flex items-center space-x-3">
                    <div class="relative w-10 h-10">
                        @if (!string.IsNullOrEmpty(Model.AvatarUrl))
                        {
                            <img id="current-user-avatar"
                                 src="@Model.AvatarUrl?t=@DateTime.Now.Ticks"
                                 alt="Аватар"
                                 class="w-10 h-10 rounded-full object-cover shadow-md">
                        }
                        else
                        {
                            <div id="current-user-avatar-placeholder"
                                 class="guap-gradient w-10 h-10 rounded-full flex items-center justify-center shadow-md">
                                <i data-feather="user" class="w-5 h-5 text-white"></i>
                            </div>
                        }
                    </div>
                    <div>
                        <p class="font-medium">@Model.UserName</p>
                        <p class="text-xs text-gray-500">@Model.UserRole</p>
                    </div>
                    <div id="connection-status" class="relative ml-auto group">
                        <div id="status-dot" class="w-3 h-3 bg-gray-400 rounded-full"></div>
                        <div id="status-tooltip" class="absolute bottom-full right-0 mb-2 px-2 py-1 text-xs text-white bg-gray-800 rounded opacity-0 invisible group-hover:opacity-100 group-hover:visible transition">
                            Подключение...
                        </div>
                    </div>
                    <form asp-page="/Authorization/Logout" method="post" class="ml-2">
                        <button type="submit" class="text-gray-500 hover:text-red-600"><i data-feather="log-out" class="w-5 h-5"></i></button>
                    </form>
                </div>
            </div>
        </div>

        <div class="flex-1 flex flex-col">
            <div id="chat-header" class="p-4 border-b border-gray-200 bg-white flex items-center justify-between cursor-pointer hover:bg-gray-50 transition" onclick="openChatInfo()">
                <div class="flex items-center space-x-3">
                    <div class="relative">
                        <img id="chat-info-avatar" src="https://static.photos/people/200x200/default" class="w-12 h-12 rounded-full object-cover">
                        <span id="chat-online-indicator" class="absolute bottom-0 right-0 w-3 h-3 bg-green-500 rounded-full border-2 border-white"></span>
                    </div>
                    <div>
                        <h2 id="chat-title" class="font-semibold text-lg">Выберите чат</h2>
                        <p id="chat-subtitle" class="text-sm text-gray-500">Нажмите, чтобы посмотреть информацию</p>
                    </div>
                </div>
                <i data-feather="chevron-down" class="w-5 h-5 text-gray-500"></i>
            </div>

            <div id="messages-container" class="flex-1 p-4 overflow-y-auto bg-gray-50">
                <div class="flex items-center justify-center h-full text-gray-500">
                    <p>Выберите чат для просмотра сообщений</p>
                </div>
            </div>

            <div class="p-3 border-t border-gray-200 bg-white">
                <div class="flex items-center space-x-2">
                    <label for="file-input" class="cursor-pointer text-gray-500 hover:text-gray-700"><i data-feather="paperclip" class="w-5 h-5"></i></label>
                    <input id="file-input" type="file" class="hidden" multiple>
                    <input id="message-input" type="text" placeholder="Напишите сообщение..."
                           class="flex-1 px-4 py-2 bg-gray-100 rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500 focus:bg-white">
                    <button id="send-button" class="text-gray-500 hover:text-gray-700">
                        <i data-feather="send" class="w-5 h-5"></i>
                    </button>
                </div>
                <div id="attached-files" class="mt-2 flex flex-wrap gap-2"></div>
            </div>
        </div>
    </div>

    <div id="lightbox" class="lightbox" onclick="this.classList.remove('show'); lightboxImg.src=''">
        <img id="lightbox-img" src="" alt="">
    </div>

    <div id="create-chat-modal" class="modal">
        <div class="bg-white rounded-2xl shadow-2xl w-full max-w-md p-8 relative">
            <div class="flex items-center justify-between mb-8">
                <h3 class="text-2xl font-bold text-gray-900">Новый чат</h3>
                <button id="close-modal" class="text-gray-400 hover:text-gray-600 transition"><i data-feather="x" class="w-7 h-7"></i></button>
            </div>
            <div class="grid grid-cols-2 gap-4 mb-8">
                <label class="relative cursor-pointer">
                    <input type="radio" name="chat-type" value="private" checked class="sr-only peer">
                    <div class="bg-gray-50 peer-checked:bg-blue-50 peer-checked:border-blue-500 border-2 border-gray-200 rounded-xl p-5 text-center transition-all hover:bg-gray-100">
                        <i data-feather="user" class="w-10 h-10 mx-auto mb-3 text-gray-600 peer-checked:text-blue-600"></i>
                        <span class="block text-sm font-medium text-gray-700">Приватный</span>
                    </div>
                </label>
                <label class="relative cursor-pointer">
                    <input type="radio" name="chat-type" value="group" class="sr-only peer">
                    <div class="bg-gray-50 peer-checked:bg-blue-50 peer-checked:border-blue-500 border-2 border-gray-200 rounded-xl p-5 text-center transition-all hover:bg-gray-100">
                        <i data-feather="users" class="w-10 h-10 mx-auto mb-3 text-gray-600 peer-checked:text-blue-600"></i>
                        <span class="block text-sm font-medium text-gray-700">Групповой</span>
                    </div>
                </label>
            </div>
            <div id="group-name-container" class="mb-6 hidden">
                <label class="block text-sm font-medium text-gray-700 mb-2">Название группы</label>
                <input type="text" id="chat-name" placeholder="Например: Друзья ГУАПа" class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500">
            </div>
            <div class="mb-6">
                <label class="block text-sm font-medium text-gray-700 mb-2">Добавить участников</label>
                <div class="relative">
                    <input type="text" id="user-search" placeholder="Поиск по имени..." autocomplete="off" class="w-full px-4 py-3 pl-11 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <i data-feather="search" class="absolute left-4 top-3.5 w-5 h-5 text-gray-400"></i>
                </div>
                <div id="user-search-results"></div>
            </div>
            <div id="selected-users" class="flex flex-wrap gap-2 mb-6"></div>
            <div class="flex justify-end gap-3">
                <button id="cancel-create" class="px-6 py-3 text-gray-600 hover:text-gray-800 font-medium transition">Отмена</button>
                <button id="confirm-create" class="px-8 py-3 bg-blue-600 text-white rounded-xl hover:bg-blue-700 font-medium shadow-lg transition transform hover:scale-105">Создать</button>
            </div>
        </div>
    </div>

    <div id="chat-info-modal" class="modal">
        <div class="bg-white rounded-2xl shadow-2xl w-full max-w-lg p-8 max-h-screen overflow-y-auto">
            <div class="flex items-center justify-between mb-6">
                <h3 class="text-2xl font-bold">Информация о чате</h3>
                <button onclick="document.getElementById('chat-info-modal').classList.remove('show')" class="text-gray-400 hover:text-gray-600">
                    <i data-feather="x" class="w-7 h-7"></i>
                </button>
            </div>

            <div class="flex flex-col items-center mb-8">
                <img id="modal-chat-avatar" src="https://static.photos/people/200x200/default" class="w-24 h-24 rounded-full object-cover mb-4">
                <input type="text" id="modal-chat-name" class="text-2xl font-bold text-center bg-transparent border-b-2 border-transparent focus:border-blue-500 outline-none w-full" placeholder="Название чата">
                <p id="modal-chat-type" class="text-sm text-gray-500 mt-2"></p>
            </div>

            <div class="mb-6">
                <div class="flex items-center justify-between mb-3">
                    <h4 class="font-semibold">Участники <span id="participants-count" class="text-gray-500"></span></h4>
                    <button id="add-participant-btn" class="text-blue-600 text-sm font-medium hover:underline">+ Добавить</button>
                </div>
                <div id="participants-list" class="space-y-2"></div>
            </div>

            <div class="mt-8 pt-6 border-t border-gray-200">
                <button id="delete-chat-btn" class="w-full px-6 py-3 bg-red-600 hover:bg-red-700 text-white rounded-xl font-medium transition transform hover:scale-105">
                    Удалить чат
                </button>
            </div>
            <div class="flex justify-end gap-3 mt-8">
                <button onclick="document.getElementById('chat-info-modal').classList.remove('show')" class="px-6 py-3 text-gray-600 font-medium">Отмена</button>
                <button id="save-chat-info" class="px-8 py-3 bg-blue-600 text-white rounded-xl font-medium opacity-0 pointer-events-none transition">Сохранить изменения</button>
            </div>
        </div>
    </div>

    <script>
        feather.replace();

        const API_BASE = 'https://localhost:7001/api';
        const HUB_URL = 'https://localhost:7001/hubs/chat';
        const token = '@(HttpContext.Session.GetString("JWT_TOKEN") ?? "")';

        const chatsList = document.getElementById('chats-list');
        const messagesContainer = document.getElementById('messages-container');
        const messageInput = document.getElementById('message-input');
        const sendButton = document.getElementById('send-button');
        const fileInput = document.getElementById('file-input');
        const attachedFiles = document.getElementById('attached-files');
        const lightbox = document.getElementById('lightbox');
        const lightboxImg = document.getElementById('lightbox-img');

        let currentChatId = null;
        let selectedFiles = [];
        let connection = null;
        let isSending = false;
        let selectedUserIds = [];
        let lastQuery = '';
        let searchTimeout = null;
        let allChatItems = [];

        fileInput.onchange = function() {
            selectedFiles = Array.from(this.files || []);
            renderAttachedPreviews();
        };

        function addBlockSystemMessage(blockerName, blockTime = null) {
            document.querySelectorAll('.system-block-message').forEach(el => el.remove());

            const div = document.createElement('div');
            div.className = 'mb-6 flex justify-center system-block-message';
            div.innerHTML = `
                <div class="bg-red-50 border border-red-200 text-red-800 px-6 py-4 rounded-2xl text-center max-w-sm">
                    <i data-feather="lock" class="w-8 h-8 mx-auto mb-2"></i>
                    <p class="font-semibold text-lg">${blockerName} добавил вас в чёрный список</p>
                    ${blockTime ? `<p class="text-sm opacity-80 mt-1">${formatDateTime(blockTime)}</p>` : ''}
                    <p class="text-sm mt-2 opacity-90">Вы не можете отправлять сообщения в этот чат</p>
                </div>
            `;
            messagesContainer.appendChild(div);
            feather.replace();
            scrollToBottom();
        }

        function blockChat(blockerName = "Этот пользователь", blockTime = null) {
            messageInput.disabled = true;
            messageInput.placeholder = "Вы в чёрном списке";
            messageInput.style.backgroundColor = "#f3f4f6";
            messageInput.style.color = "#6b7280";
            sendButton.disabled = true;
            sendButton.style.opacity = "0.4";
            fileInput.disabled = true;
            document.querySelector('label[for="file-input"]').style.opacity = "0.4";

            const subtitle = document.getElementById('chat-subtitle');
            if (subtitle) subtitle.textContent = 'Заблокировал вас';

            addBlockSystemMessage(blockerName, blockTime);
        }

        function unblockChat() {
            messageInput.disabled = false;
            messageInput.placeholder = "Напишите сообщение...";
            messageInput.style.backgroundColor = "";
            messageInput.style.color = "";
            sendButton.disabled = false;
            sendButton.style.opacity = "";
            fileInput.disabled = false;
            document.querySelector('label[for="file-input"]').style.opacity = "";

            document.querySelectorAll('.system-block-message').forEach(el => el.remove());

            const subtitle = document.getElementById('chat-subtitle');
            if (subtitle) subtitle.textContent = 'Активен недавно';
        }

        function clearBlockedNotice() {
            unblockMessageInput();
            const notice = document.querySelector('.blocked-chat-notice');
            if (notice) notice.remove();
        }

        function cacheChatItems() {
            allChatItems = Array.from(chatsList.querySelectorAll('.chat-item'));
        }
        function filterChats() {
            const query = document.getElementById('chat-search').value.trim().toLowerCase();
            document.getElementById('clear-search').classList.toggle('hidden', query === '');
            allChatItems.forEach(item => {
                const title = (item.querySelector('h3')?.textContent || '').toLowerCase();
                const lastMsg = (item.querySelector('p')?.textContent || '').toLowerCase();
                item.style.display = (title.includes(query) || lastMsg.includes(query)) ? '' : 'none';
            });
        }
        document.getElementById('chat-search').addEventListener('input', filterChats);
        document.getElementById('clear-search').addEventListener('click', () => {
            document.getElementById('chat-search').value = '';
            document.getElementById('chat-search').focus();
            filterChats();
        });

        function renderAttachments(attachments = []) {
            if (!attachments?.length) return '';
            return attachments.map(att => {
                const fileNameFromUrl = att.url.split('/').pop();
                const isImage = att.fileType?.startsWith('image/');
                const displayUrl = `/uploads/${fileNameFromUrl}`;
                const downloadUrl = `/uploads/${fileNameFromUrl}?download=1`;

                const size = att.sizeInBytes ? (att.sizeInBytes / 1024).toFixed(1) + ' КБ' : '';

                if (isImage) {
                    return `
                        <img src="${displayUrl}"
                             class="image-preview mt-2 cursor-zoom-in"
                             alt="${att.fileName}"
                             onclick="openLightbox('${displayUrl}')">
                    `;
                } else {
                    return `
                        <div class="file-attachment mt-2">
                            <i data-feather="file"></i>
                            <a href="${downloadUrl}"
                               class="text-white-600 hover:underline font-medium">
                               ${att.fileName} ${size ? `<span class="text-xs opacity-70">(${size})</span>` : ''}
                            </a>
                        </div>
                    `;
                }
            }).join('');
        }

        function openLightbox(url) {
            lightboxImg.src = url;
            lightbox.classList.add('show');
        }

        function appendMessage(msg) {
            if (msg.messageId && document.querySelector(`[data-mid="${msg.messageId}"]`)) {
                return;
            }

            const isMine = msg.senderId === '@Model.UserId';
            const isGroupChat = currentChatInfo?.type === 'group';

            const div = document.createElement('div');
            div.className = `mb-6 flex ${isMine ? 'justify-end' : 'justify-start'}`;
            if (msg.messageId) div.dataset.mid = msg.messageId;

            const fullTime = formatDateTime(msg.sentAt);
            const statusText = msg.status === 'Read' ? 'Прочитано'
                             : msg.status === 'Delivered' ? 'Доставлено'
                             : 'Отправлено';

            let nameElement = `<span class="sender-name">Загрузка...</span>`;

            if (isGroupChat) {
                if (isMine) {
                    nameElement = `<span class="sender-name">Вы</span>`;
                }
            } else {
                nameElement = '';
            }

            let footerHtml = '';
            if (isGroupChat) {
                footerHtml = isMine
                    ? `<div class="text-xs text-blue-500 mt-1 flex items-center gap-1.5 flex-row-reverse">
                         <span>${statusText}</span><span>·</span>${nameElement}<span>· ${fullTime}</span>
                       </div>`
                    : `<div class="text-xs text-gray-500 mt-1 flex items-center gap-1.5">
                         ${nameElement}<span>·</span><span>${statusText}</span><span>· ${fullTime}</span>
                       </div>`;
            } else {
                footerHtml = `<div class="text-xs ${isMine ? 'text-blue-500' : 'text-gray-500'} mt-1 text-right">
                                ${statusText} · ${fullTime}
                              </div>`;
            }

            div.innerHTML = `
                <div class="flex flex-col ${isMine ? 'items-end' : 'items-start'} max-w-xs lg:max-w-md">
                    <div class="inline-block px-4 py-2.5 rounded-2xl shadow-sm ${isMine ? 'bg-blue-600 text-white' : 'bg-gray-100 text-gray-900'}">
                        ${msg.messageText ? `<p class="break-words whitespace-pre-wrap leading-relaxed">${msg.messageText.replace(/\n/g, '<br>')}</p>` : ''}
                        ${renderAttachments(msg.attachments || [])}
                    </div>
                    ${footerHtml}
                </div>
            `;

            messagesContainer.appendChild(div);
            feather.replace();
            scrollToBottom();

            if (isGroupChat && !isMine) {
                loadUserName(msg.senderId).then(name => {
                    if (name) {
                        const nameEl = div.querySelector('.sender-name');
                        if (nameEl) nameEl.textContent = name;
                    }
                });
            }
        }

        const userNameCache = new Map();

        async function loadUserName(userId) {
            if (userNameCache.has(userId)) {
                return userNameCache.get(userId);
            }

            try {
                const res = await fetch(`${API_BASE}/users/${userId}/name`, {
                    headers: { 'Authorization': `Bearer ${token}` }
                });
                const json = await res.json();
                if (json.isSuccess && json.data) {
                    userNameCache.set(userId, json.data);
                    return json.data;
                }
            } catch (e) {
                console.warn('Не удалось загрузить имя пользователя', userId);
            }
            userNameCache.set(userId, 'Пользователь');
            return 'Пользователь';
        }

        function scrollToBottom() {
            messagesContainer.scrollTop = messagesContainer.scrollHeight;
        }

        function decodeHtml(html) {
            const txt = document.createElement("textarea");
            txt.innerHTML = html;
            return txt.value;
        }

        function formatDateTime(isoString) {
            if (!isoString) return '';
            const date = new Date(isoString + 'Z');
            const day   = String(date.getDate()).padStart(2, '0');
            const month = String(date.getMonth() + 1).padStart(2, '0');
            const year  = date.getFullYear();
            const hours = String(date.getHours()).padStart(2, '0');
            const minutes = String(date.getMinutes()).padStart(2, '0');
            return `${day}.${month}.${year} ${hours}:${minutes}`;
        }

        async function sendMessage() {
            if (!currentChatId) return;

            const text = messageInput.value.trim();
            const hasFiles = selectedFiles.length > 0;

            if (!text && !hasFiles) return;

            const textForPreview = text;
            const filesForPreview = [...selectedFiles];

            const formData = new FormData();
            if (text) formData.append('messageText', text);
            selectedFiles.forEach(file => formData.append('files', file));

            const url = `${API_BASE}/messages/${currentChatId}?access_token=${encodeURIComponent(token)}`;

            try {
                const res = await fetch(url, { method: 'POST', body: formData });
                if (!res.ok) {
                    const data = await res.json().catch(() => ({}));
                    if (data.error?.includes("чёрном списке") || data.error?.includes("заблокирован")) {
                        blockChat("Вы в чёрном списке этого пользователя");
                    }
                    return;
                }

                messageInput.value = '';
                attachedFiles.innerHTML = '';
                selectedFiles = [];

                fileInput.value = '';
                if (fileInput.value) {
                    fileInput.type = 'text';
                    fileInput.type = 'file';
                }

                const currentChatItem = document.querySelector(`.chat-item[data-chat-id="${currentChatId}"]`);
                if (currentChatItem) {
                    const previewDiv = currentChatItem.querySelector('div.text-sm.text-gray-500');
                    if (previewDiv) {
                        if (textForPreview) {
                            const displayText = textForPreview.length > 38
                                ? textForPreview.substring(0, 35) + '...'
                                : textForPreview;
                            previewDiv.innerHTML = displayText;
                        } else if (filesForPreview.length > 0) {
                            const images = filesForPreview.filter(f => f.type.startsWith('image/')).length;
                            const videos = filesForPreview.filter(f => f.type.startsWith('video/')).length;
                            const files = filesForPreview.length - images - videos;

                            const parts = [];
                            if (images > 0) parts.push(`<i data-feather="image" class="w-4 h-4"></i> Фото${images > 1 ? ' ('+images+')' : ''}`);
                            if (videos > 0) parts.push(`<i data-feather="video" class="w-4 h-4"></i> Видео${videos > 1 ? ' ('+videos+')' : ''}`);
                            if (files > 0) parts.push(`<i data-feather="paperclip" class="w-4 h-4"></i> Файл${files > 1 ? 'ов: '+files : ''}`);

                            previewDiv.innerHTML = parts.join('&nbsp;&nbsp;') || '<i data-feather="paperclip"></i> Вложение';
                            feather.replace();
                        }
                    }
                }

            } catch (e) {
                console.error('Ошибка отправки:', e);
            }
        }

