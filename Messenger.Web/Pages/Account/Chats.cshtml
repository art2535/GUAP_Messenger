@page
@model Messenger.Web.Pages.Account.ChatsModel
@{
    ViewData["Title"] = "Чаты";
    Layout = null;
}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/feather-icons"></script>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding: 0;
            overflow: hidden;
        }

        .guap-gradient {
            background: linear-gradient(135deg, #1e3a8a 0%, #3b82f6 100%);
        }

        .chat-item:hover {
            background-color: #f3f4f6;
        }

        .chat-item.active {
            background-color: #e5e7eb;
        }

        .modal {
            position: fixed;
            inset: 0;
            background: rgba(0,0,0,.5);
            backdrop-filter: blur(4px);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 50;
            opacity: 0;
            visibility: hidden;
            transition: all .3s ease;
        }

            .modal.show {
                opacity: 1;
                visibility: visible;
            }

        .image-preview {
            max-width: 260px;
            max-height: 260px;
            border-radius: 16px;
            cursor: zoom-in;
            object-fit: cover;
            transition: transform .2s;
        }

            .image-preview:hover {
                transform: scale(1.05);
            }

        .file-attachment {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            background: rgba(0,0,0,0.06);
            padding: 10px 14px;
            border-radius: 14px;
            font-size: 13px;
        }

            .file-attachment i {
                width: 20px;
                height: 20px;
            }

        .lightbox {
            position: fixed;
            inset: 0;
            background: rgba(0,0,0,0.95);
            z-index: 100;
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            visibility: hidden;
            transition: all .3s;
        }

            .lightbox.show {
                opacity: 1;
                visibility: visible;
            }

            .lightbox img {
                max-width: 90vw;
                max-height: 90vh;
                border-radius: 16px;
                box-shadow: 0 20px 40px rgba(0,0,0,0.6);
            }

        .preview-attachment {
            position: relative;
            display: inline-block;
            margin: 4px;
        }

            .preview-attachment button {
                position: absolute;
                top: -6px;
                right: -6px;
                background: #ef4444;
                color: white;
                width: 20px;
                height: 20px;
                border-radius: 50%;
                font-size: 12px;
                border: none;
                cursor: pointer;
            }

        .modal {
            z-index: 1000 !important;
        }

        .lightbox {
            z-index: 2000 !important;
        }

        #connection-status .w-3 {
            transition: background-color 0.3s ease;
        }

        #user-search-results {
            position: absolute;
            z-index: 100;
            width: calc(100% - 2rem);
            left: 1rem;
            right: 1rem;
            margin-top: 0.25rem;
            background: white;
            border: 1px solid rgb(229 231 235);
            border-radius: 0.75rem;
            box-shadow: 0 10px 15px -3px rgba(0,0,0,0.1), 0 4px 6px -2px rgba(0,0,0,0.05);
            max-height: 16rem;
            overflow-y: auto;
            display: none;
        }

            #user-search-results.show {
                display: block;
            }
    </style>
</head>
<body class="h-screen">

    <script>
        const JWT_TOKEN = '@(HttpContext.Session.GetString("JWT_SECRET") ?? "")';
        if (!JWT_TOKEN || JWT_TOKEN === '') {
            document.write('<div class="p-8 text-center text-red-600 text-xl">Ошибка авторизации. <a href="/Authorization/Login" class="underline">Войти заново</a></div>');
        }
    </script>

    <div class="flex h-full">

        <!-- Sidebar -->
        <div class="w-80 bg-white border-r border-gray-200 flex flex-col">
            <div class="p-4 border-b border-gray-200 flex items-center justify-between">
                <div class="flex items-center space-x-3">
                    <div class="guap-gradient text-white w-10 h-10 rounded-full flex items-center justify-center">
                        <i data-feather="message-square" class="w-5 h-5"></i>
                    </div>
                    <h1 class="font-bold text-lg">GUAP Messenger</h1>
                </div>
                <a asp-page="/Account/Settings" class="text-gray-500 hover:text-gray-700"><i data-feather="settings" class="w-5 h-5"></i></a>
            </div>

            <!-- Поиск и создание чата -->
            <div class="p-3 border-b border-gray-200 space-y-2">
                <div class="relative">
                    <input type="text" id="chat-search" placeholder="Поиск по чатам"
                           class="w-full pl-10 pr-10 py-2 bg-gray-100 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:bg-white transition">
                    <i data-feather="search" class="absolute left-3 top-2.5 text-gray-400 w-5 h-5"></i>
                    <button id="clear-search" class="absolute right-3 top-2.5 text-gray-400 hover:text-gray-600 hidden">
                        <i data-feather="x" class="w-5 h-5"></i>
                    </button>
                </div>
                <button id="create-chat-btn" class="w-full guap-gradient text-white py-2 px-4 rounded-lg hover:opacity-90 transition flex items-center justify-center">
                    <i data-feather="plus" class="w-4 h-4 mr-2"></i> Создать чат
                </button>
            </div>

            <!-- Список чатов -->
            <div class="flex-1 overflow-y-auto" id="chats-list">
                <div class="text-gray-500 p-4">Загрузка чатов...</div>
            </div>

            <!-- Футер -->
            <div class="p-4 border-t border-gray-200">
                <div class="flex items-center space-x-3">
                    <img src="https://static.photos/people/200x200/4" alt="User" class="w-10 h-10 rounded-full">
                    <div>
                        <p class="font-medium">@Model.UserName</p>
                        <p class="text-xs text-gray-500">@Model.UserRole</p>
                    </div>
                    <div id="connection-status" class="relative ml-auto group">
                        <div id="status-dot" class="w-3 h-3 bg-gray-400 rounded-full"></div>
                        <div id="status-tooltip" class="absolute bottom-full right-0 mb-2 px-2 py-1 text-xs text-white bg-gray-800 rounded opacity-0 invisible group-hover:opacity-100 group-hover:visible transition">
                            Подключение...
                        </div>
                    </div>
                    <form asp-page="/Authorization/Logout" method="post" class="ml-2">
                        <button type="submit" class="text-gray-500 hover:text-red-600"><i data-feather="log-out" class="w-5 h-5"></i></button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Основная область -->
        <div class="flex-1 flex flex-col">
            <div id="chat-header" class="p-4 border-b border-gray-200 bg-white flex items-center justify-between cursor-pointer hover:bg-gray-50 transition" onclick="openChatInfo()">
                <div class="flex items-center space-x-3">
                    <div class="relative">
                        <img id="chat-info-avatar" src="https://static.photos/people/200x200/default" class="w-12 h-12 rounded-full object-cover">
                        <span id="chat-online-indicator" class="absolute bottom-0 right-0 w-3 h-3 bg-green-500 rounded-full border-2 border-white"></span>
                    </div>
                    <div>
                        <h2 id="chat-title" class="font-semibold text-lg">Выберите чат</h2>
                        <p id="chat-subtitle" class="text-sm text-gray-500">Нажмите, чтобы посмотреть информацию</p>
                    </div>
                </div>
                <i data-feather="chevron-down" class="w-5 h-5 text-gray-500"></i>
            </div>

            <div id="messages-container" class="flex-1 p-4 overflow-y-auto bg-gray-50">
                <div class="flex items-center justify-center h-full text-gray-500">
                    <p>Выберите чат для просмотра сообщений</p>
                </div>
            </div>

            <div class="p-3 border-t border-gray-200 bg-white">
                <div class="flex items-center space-x-2">
                    <label for="file-input" class="cursor-pointer text-gray-500 hover:text-gray-700"><i data-feather="paperclip" class="w-5 h-5"></i></label>
                    <input id="file-input" type="file" class="hidden" multiple>
                    <input id="message-input" type="text" placeholder="Напишите сообщение..."
                           class="flex-1 px-4 py-2 bg-gray-100 rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500 focus:bg-white">
                    <button id="send-button" class="text-gray-500 hover:text-gray-700">
                        <i data-feather="send" class="w-5 h-5"></i>
                    </button>
                </div>
                <div id="attached-files" class="mt-2 flex flex-wrap gap-2"></div>
            </div>
        </div>
    </div>

    <!-- Lightbox -->
    <div id="lightbox" class="lightbox" onclick="this.classList.remove('show'); lightboxImg.src=''">
        <img id="lightbox-img" src="" alt="">
    </div>

    <!-- Модальное окно создания чата -->
    <div id="create-chat-modal" class="modal">
        <div class="bg-white rounded-2xl shadow-2xl w-full max-w-md p-8 relative">
            <div class="flex items-center justify-between mb-8">
                <h3 class="text-2xl font-bold text-gray-900">Новый чат</h3>
                <button id="close-modal" class="text-gray-400 hover:text-gray-600 transition"><i data-feather="x" class="w-7 h-7"></i></button>
            </div>
            <div class="grid grid-cols-2 gap-4 mb-8">
                <label class="relative cursor-pointer">
                    <input type="radio" name="chat-type" value="private" checked class="sr-only peer">
                    <div class="bg-gray-50 peer-checked:bg-blue-50 peer-checked:border-blue-500 border-2 border-gray-200 rounded-xl p-5 text-center transition-all hover:bg-gray-100">
                        <i data-feather="user" class="w-10 h-10 mx-auto mb-3 text-gray-600 peer-checked:text-blue-600"></i>
                        <span class="block text-sm font-medium text-gray-700">Приватный</span>
                    </div>
                </label>
                <label class="relative cursor-pointer">
                    <input type="radio" name="chat-type" value="group" class="sr-only peer">
                    <div class="bg-gray-50 peer-checked:bg-blue-50 peer-checked:border-blue-500 border-2 border-gray-200 rounded-xl p-5 text-center transition-all hover:bg-gray-100">
                        <i data-feather="users" class="w-10 h-10 mx-auto mb-3 text-gray-600 peer-checked:text-blue-600"></i>
                        <span class="block text-sm font-medium text-gray-700">Групповой</span>
                    </div>
                </label>
            </div>
            <div id="group-name-container" class="mb-6 hidden">
                <label class="block text-sm font-medium text-gray-700 mb-2">Название группы</label>
                <input type="text" id="chat-name" placeholder="Например: Друзья ГУАПа" class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500">
            </div>
            <div class="mb-6">
                <label class="block text-sm font-medium text-gray-700 mb-2">Добавить участников</label>
                <div class="relative">
                    <input type="text" id="user-search" placeholder="Поиск по имени..." autocomplete="off" class="w-full px-4 py-3 pl-11 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <i data-feather="search" class="absolute left-4 top-3.5 w-5 h-5 text-gray-400"></i>
                </div>
                <div id="user-search-results"></div>
            </div>
            <div id="selected-users" class="flex flex-wrap gap-2 mb-6"></div>
            <div class="flex justify-end gap-3">
                <button id="cancel-create" class="px-6 py-3 text-gray-600 hover:text-gray-800 font-medium transition">Отмена</button>
                <button id="confirm-create" class="px-8 py-3 bg-blue-600 text-white rounded-xl hover:bg-blue-700 font-medium shadow-lg transition transform hover:scale-105">Создать</button>
            </div>
        </div>
    </div>

    <!-- НОВАЯ МОДАЛКА: Информация о чате -->
    <div id="chat-info-modal" class="modal">
        <div class="bg-white rounded-2xl shadow-2xl w-full max-w-lg p-8 max-h-screen overflow-y-auto">
            <div class="flex items-center justify-between mb-6">
                <h3 class="text-2xl font-bold">Информация о чате</h3>
                <button onclick="document.getElementById('chat-info-modal').classList.remove('show')" class="text-gray-400 hover:text-gray-600">
                    <i data-feather="x" class="w-7 h-7"></i>
                </button>
            </div>

            <div class="flex flex-col items-center mb-8">
                <img id="modal-chat-avatar" src="https://static.photos/people/200x200/default" class="w-24 h-24 rounded-full object-cover mb-4">
                <input type="text" id="modal-chat-name" class="text-2xl font-bold text-center bg-transparent border-b-2 border-transparent focus:border-blue-500 outline-none w-full" placeholder="Название чата">
                <p id="modal-chat-type" class="text-sm text-gray-500 mt-2"></p>
            </div>

            <div class="mb-6">
                <div class="flex items-center justify-between mb-3">
                    <h4 class="font-semibold">Участники <span id="participants-count" class="text-gray-500"></span></h4>
                    <button id="add-participant-btn" class="text-blue-600 text-sm font-medium hover:underline">+ Добавить</button>
                </div>
                <div id="participants-list" class="space-y-2"></div>
            </div>

            <div class="flex justify-end gap-3 mt-8">
                <button onclick="document.getElementById('chat-info-modal').classList.remove('show')" class="px-6 py-3 text-gray-600 font-medium">Отмена</button>
                <button id="save-chat-info" class="px-8 py-3 bg-blue-600 text-white rounded-xl font-medium opacity-0 pointer-events-none transition">Сохранить изменения</button>
            </div>
        </div>
    </div>

    <script>
        feather.replace();

        const API_BASE = 'https://localhost:7045/api';
        const HUB_URL = 'https://localhost:7045/hubs/chat';
        const token = '@(HttpContext.Session.GetString("JWT_SECRET") ?? "")';

        const chatsList = document.getElementById('chats-list');
        const messagesContainer = document.getElementById('messages-container');
        const messageInput = document.getElementById('message-input');
        const sendButton = document.getElementById('send-button');
        const fileInput = document.getElementById('file-input');
        const attachedFiles = document.getElementById('attached-files');
        const lightbox = document.getElementById('lightbox');
        const lightboxImg = document.getElementById('lightbox-img');

        let currentChatId = null;
        let selectedFiles = [];
        let connection = null;
        let isSending = false;
        let selectedUserIds = [];
        let lastQuery = '';
        let searchTimeout = null;
        let allChatItems = [];

        // === Поиск по чатам ===
        function cacheChatItems() {
            allChatItems = Array.from(chatsList.querySelectorAll('.chat-item'));
        }
        function filterChats() {
            const query = document.getElementById('chat-search').value.trim().toLowerCase();
            document.getElementById('clear-search').classList.toggle('hidden', query === '');
            allChatItems.forEach(item => {
                const title = (item.querySelector('h3')?.textContent || '').toLowerCase();
                const lastMsg = (item.querySelector('p')?.textContent || '').toLowerCase();
                item.style.display = (title.includes(query) || lastMsg.includes(query)) ? '' : 'none';
            });
        }
        document.getElementById('chat-search').addEventListener('input', filterChats);
        document.getElementById('clear-search').addEventListener('click', () => {
            document.getElementById('chat-search').value = '';
            document.getElementById('chat-search').focus();
            filterChats();
        });

        // === Отображение вложений ===
        function renderAttachments(attachments = []) {
            if (!attachments?.length) return '';
            return attachments.map(att => {
                const fileNameFromUrl = att.url.split('/').pop();
                const isImage = att.fileType?.startsWith('image/');
                const displayUrl = `/uploads/${fileNameFromUrl}`;
                const downloadUrl = `/uploads/${fileNameFromUrl}?download=1`;

                const size = att.sizeInBytes ? (att.sizeInBytes / 1024).toFixed(1) + ' КБ' : '';

                if (isImage) {
                    return `
                        <img src="${displayUrl}"
                             class="image-preview mt-2 cursor-zoom-in"
                             alt="${att.fileName}"
                             onclick="openLightbox('${displayUrl}')">
                    `;
                } else {
                    return `
                        <div class="file-attachment mt-2">
                            <i data-feather="file"></i>
                            <a href="${downloadUrl}"
                               class="text-white-600 hover:underline font-medium">
                               ${att.fileName} ${size ? `<span class="text-xs opacity-70">(${size})</span>` : ''}
                            </a>
                        </div>
                    `;
                }
            }).join('');
        }

        // Вынеси открытие лайтбокса в отдельную функцию
        function openLightbox(url) {
            lightboxImg.src = url;
            lightbox.classList.add('show');
        }

        function appendMessage(msg) {
            const isMine = msg.senderId === '@Model.UserId';
            const div = document.createElement('div');
            div.className = `mb-4 flex ${isMine ? 'justify-end' : 'justify-start'}`;
            div.innerHTML = `
                <div class="inline-block max-w-xs px-4 py-2 rounded-2xl shadow-sm ${isMine ? 'bg-blue-600 text-white' : 'bg-white text-gray-900'}">
                    ${msg.messageText ? `<p class="break-words whitespace-pre-wrap">${msg.messageText.replace(/\n/g, '<br>')}</p>` : ''}
                    ${renderAttachments(msg.attachments)}
                    <div class="text-xs mt-1 opacity-70">
                        ${msg.status === 'Read' ? 'Прочитано' : msg.status === 'Delivered' ? 'Доставлено' : 'Отправлено'}
                        ${msg.sentAt ? ' · ' + new Date(msg.sentAt).toLocaleTimeString('ru', { hour: '2-digit', minute: '2-digit' }) : ''}
                    </div>
                </div>
            `;
            messagesContainer.appendChild(div);
            feather.replace();
            scrollToBottom();
        }

        function scrollToBottom() {
            messagesContainer.scrollTop = messagesContainer.scrollHeight;
        }

        // === Отправка сообщения ===
        async function sendMessage() {
            if (isSending || !currentChatId) return;
            const text = messageInput.value.trim();
            if (!text && selectedFiles.length === 0) return;

            isSending = true;
            const oldIcon = sendButton.innerHTML;
            sendButton.innerHTML = '<i data-feather="loader" class="w-5 h-5 animate-spin"></i>';
            feather.replace();

            const form = new FormData();
            if (text) form.append('messageText', text);
            selectedFiles.forEach(f => form.append('files', f));

            try {
                const res = await fetch(`${API_BASE}/messages/${currentChatId}`, {
                    method: 'POST',
                    headers: { 'Authorization': `Bearer ${token}` },
                    body: form
                });
                const json = await res.json();
                if (!res.ok || !json.isSuccess) throw new Error(json.error || 'Ошибка');

                messageInput.value = '';
                selectedFiles = [];
                attachedFiles.innerHTML = '';
                fileInput.value = '';
            } catch (err) {
                alert('Ошибка отправки: ' + err.message);
            } finally {
                isSending = false;
                sendButton.innerHTML = oldIcon;
                feather.replace();
                messageInput.focus();
            }
        }

        // === Превью прикреплённых файлов ===
        fileInput.onchange = () => {
            selectedFiles = Array.from(fileInput.files || []);
            renderAttachedPreviews();
        };

        function renderAttachedPreviews() {
            attachedFiles.innerHTML = '';

            selectedFiles.forEach((file, currentIndex) => {
                const wrapper = document.createElement('div');
                wrapper.className = 'preview-attachment relative inline-block';

                // Кнопка удаления
                const removeBtn = document.createElement('button');
                removeBtn.type = 'button';
                removeBtn.innerHTML = '×';
                removeBtn.className = 'absolute -top-2 -right-2 w-8 h-8 bg-red-500 hover:bg-red-600 text-white rounded-full flex items-center justify-center text-xl font-bold shadow-lg z-10 transition';
                removeBtn.onclick = (e) => {
                    e.stopPropagation();
                    selectedFiles.splice(currentIndex, 1);
                    renderAttachedPreviews(); // перерисовываем с правильными индексами
                };

                if (file.type.startsWith('image/')) {
                    const img = document.createElement('img');
                    img.src = URL.createObjectURL(file);
                    img.className = 'w-24 h-24 object-cover rounded-xl border-2 border-gray-200 shadow-md';
                    wrapper.appendChild(img);
                } else {
                    wrapper.innerHTML = `
                        <div class="w-24 h-24 bg-gray-100 border-2 border-dashed border-gray-300 rounded-xl flex flex-col items-center justify-center text-gray-600">
                            <i data-feather="file-text" class="w-10 h-10 mb-1"></i>
                            <span class="text-xs px-2 text-center truncate w-full">${file.name.length > 15 ? file.name.slice(0,12)+'...' : file.name}</span>
                        </div>
                    `;
                    feather.replace();
                }

                wrapper.appendChild(removeBtn);
                attachedFiles.appendChild(wrapper);
            });
        }

        // === SignalR ===
        function updateConnectionStatus(text, color) {
            document.getElementById('status-dot').className = `w-3 h-3 rounded-full ${color === 'green' ? 'bg-green-500' : color === 'orange' ? 'bg-orange-500' : 'bg-red-500'}`;
            const tooltip = document.getElementById('status-tooltip');
            if (tooltip) tooltip.textContent = text;
        }

        async function startSignalR() {
            connection = new signalR.HubConnectionBuilder()
                .withUrl(HUB_URL, { accessTokenFactory: () => token })
                .withAutomaticReconnect([0, 2000, 10000])
                .build();

            connection.on('ReceiveMessage', msg => {
                if (msg.chatId === currentChatId) {
                    appendMessage(msg);
                }
                 const item = document.querySelector(`.chat-item[data-chat-id="${msg.chatId}"]`);
                if (item) {
                    item.querySelector('p').textContent = getLastMessagePreview(msg);
                }
            });

            connection.on('ReceiveSearchResults', users => {
                userSearchResults.innerHTML = "";

                if (!users || users.length === 0) {
                    userSearchResults.innerHTML = "<div class='p-2 text-muted'>Нет пользователей</div>";
                    return;
                }

                users.forEach(user => {
                    const userDiv = document.createElement("div");
                    userDiv.className = "user-search-item p-2 border-bottom";
                    userDiv.style.cursor = "pointer";
                    userDiv.dataset.userId = user.id;

                    userDiv.innerHTML = `
                        <div class="d-flex align-items-center">
                            <img src="/avatars/${user.avatarPath || 'default.png'}"
                                 class="rounded-circle me-2" width="32" height="32">
                            <span>${user.fullName}</span>
                        </div>
                    `;

                    userDiv.onclick = () => {
                        toggleUserSelection(user.id, user.fullName);
                    };

                    userSearchResults.appendChild(userDiv);
                });
            });

            connection.on('NewChat', chat => {
                if (document.querySelector(`.chat-item[data-chat-id="${chat.chatId || chat.id}"]`)) return;
                const div = document.createElement('div');
                div.className = 'p-4 chat-item flex items-center space-x-3 cursor-pointer hover:bg-gray-100 transition rounded-lg mx-2';
                div.dataset.chatId = chat.chatId || chat.id;
                div.innerHTML = `
                    <div class="relative">
                        <img src="${chat.avatar || 'https://static.photos/people/200x200/default'}" class="w-12 h-12 rounded-full object-cover">
                        <span class="absolute bottom-0 right-0 w-3 h-3 bg-green-500 rounded-full border-2 border-white"></span>
                    </div>
                    <div class="flex-1 min-w-0">
                        <h3 class="font-medium truncate">${chat.name || 'Новый чат'}</h3>
                        <p class="text-sm text-gray-500 truncate">Чат создан</p>
                    </div>
                `;
                div.onclick = () => openChat(div);
                chatsList.prepend(div);
                cacheChatItems();
                filterChats();
            });

            connection.onreconnecting(() => updateConnectionStatus('Переподключение...', 'orange'));
            connection.onreconnected(() => { updateConnectionStatus('Онлайн', 'green'); rejoinCurrentChat(); });
            connection.onclose(() => { updateConnectionStatus('Отключено', 'red'); setTimeout(startSignalR, 5000); });

            try {
                await connection.start();
                updateConnectionStatus('Онлайн', 'green');
                joinAllMyChats();
            } catch (err) {
                console.error(err);
                updateConnectionStatus('Ошибка', 'red');
                setTimeout(startSignalR, 5000);
            }
        }

        async function joinAllMyChats() {
            try {
                const res = await fetch(`${API_BASE}/chats`, { headers: { 'Authorization': `Bearer ${token}` } });
                const json = await res.json();
                if (json.data) json.data.forEach(chat => connection.invoke('JoinChat', chat.chatId || chat.id).catch(() => {}));
            } catch { }
        }
        async function joinChat(id) { if (connection?.state === 'Connected') await connection.invoke('JoinChat', id).catch(() => {}); }
        async function leaveChat(id) { if (connection?.state === 'Connected') await connection.invoke('LeaveChat', id).catch(() => {}); }
        async function rejoinCurrentChat() { if (currentChatId) joinChat(currentChatId); }

        function openChat(item) {
            const chatId = item.dataset.chatId;
            if (currentChatId === chatId) return;
            if (currentChatId) leaveChat(currentChatId);
            currentChatId = chatId;
            document.querySelectorAll('.chat-item').forEach(i => i.classList.remove('active'));
            item.classList.add('active');
            document.getElementById('chat-title').textContent = item.querySelector('h3').textContent;
            loadMessages(chatId);
            joinChat(chatId);

            document.getElementById('chat-info-avatar').src = item.querySelector('img').src;
            document.getElementById('chat-subtitle').textContent =
            item.querySelector('p').textContent === 'Нет сообщений' ? 'Нет сообщений' : 'Последнее: ' + item.querySelector('p').textContent;
        }

        async function loadChats() {
            try {
                const res = await fetch(`${API_BASE}/chats`, { headers: { 'Authorization': `Bearer ${token}` } });
                const json = await res.json();
                chatsList.innerHTML = !json.isSuccess || !json.data?.length ? '<div class="p-4 text-gray-500">Чатов нет</div>' : '';
                json.data?.forEach(chat => {
                    const div = document.createElement('div');
                    div.className = 'p-4 chat-item flex items-center space-x-3 cursor-pointer hover:bg-gray-100 transition rounded-lg mx-2';
                    div.dataset.chatId = chat.chatId || chat.id;
                    div.innerHTML = `
                        <div class="relative">
                            <img src="${chat.avatar || 'https://static.photos/people/200x200/default'}" class="w-12 h-12 rounded-full object-cover">
                            <span class="absolute bottom-0 right-0 w-3 h-3 ${chat.isOnline !== false ? 'bg-green-500' : 'bg-gray-300'} rounded-full border-2 border-white"></span>
                        </div>
                        <div class="flex-1 min-w-0">
                            <h3 class="font-medium truncate">${chat.name || 'Без имени'}</h3>
                            <p class="text-sm text-gray-500 truncate">${getLastMessagePreview(chat)}</p>
                        </div>
                    `;
                    div.onclick = () => openChat(div);
                    chatsList.appendChild(div);
                });
                cacheChatItems();
                filterChats();
            } catch {
                chatsList.innerHTML = '<div class="p-4 text-red-500">Ошибка загрузки</div>';
            }
        }

        async function loadMessages(chatId) {
            messagesContainer.innerHTML = '<p class="text-center text-gray-500">Загрузка...</p>';
            try {
                const res = await fetch(`${API_BASE}/messages/${chatId}`, { headers: { 'Authorization': `Bearer ${token}` } });
                const json = await res.json();
                messagesContainer.innerHTML = '';
                (json.data || []).forEach(appendMessage);
                scrollToBottom();
            } catch {
                messagesContainer.innerHTML = '<p class="text-red-500 text-center">Ошибка загрузки</p>';
            }
        }

        // Умное превью последнего сообщения
        function getLastMessagePreview(chatOrMessage) {
            const msg = chatOrMessage.lastMessage || chatOrMessage;
            if (!msg) return "Нет сообщений";

            if (msg.messageText && msg.messageText.trim()) {
                return msg.messageText.trim();
            }

            if (msg.attachments && msg.attachments.length > 0) {
                const images = msg.attachments.filter(a =>
                    a.fileType?.startsWith('image/') ||
                    a.fileName?.match(/\.(jpe?g|png|gif|webp|bmp|svg)$/i)
                ).length;

                const videos = msg.attachments.filter(a =>
                    a.fileType?.startsWith('video/') ||
                    a.fileName?.match(/\.(mp4|webm|mov|avi|mkv)$/i)
                ).length;

                const files = msg.attachments.length - images - videos;

                const parts = [];
                if (images > 0) parts.push(images === 1 ? "Фото" : `Фото (${images})`);
                if (videos > 0) parts.push(videos === 1 ? "Видео" : `Видео (${videos})`);
                if (files > 0) parts.push(files === 1 ? "Файл" : `Файлов: ${files}`);

                return parts.length > 0 ? parts.join(", ") : "Прикрепления";
            }

            return "Сообщение";
        }

        // === Модалка создания чата ===
        function toggleChatNameField() {
            const isGroup = document.querySelector('input[name="chat-type"]:checked').value === 'group';
            document.getElementById('group-name-container').classList.toggle('hidden', !isGroup);
        }

        document.getElementById('create-chat-btn').onclick = () => {
            selectedUserIds = [];
            document.getElementById('selected-users').innerHTML = '';
            document.getElementById('chat-name').value = '';
            document.getElementById('user-search').value = '';
            document.querySelector('input[value="private"]').checked = true;
            toggleChatNameField();
            document.getElementById('create-chat-modal').classList.add('show');

            lastQuery = '';
            document.getElementById('user-search-results').classList.remove('show');

            setTimeout(() => document.getElementById('user-search').focus(), 150);
        };

        document.querySelectorAll('input[name="chat-type"]').forEach(r => r.addEventListener('change', toggleChatNameField));
        document.getElementById('close-modal').onclick = document.getElementById('cancel-create').onclick = () => {
            document.getElementById('create-chat-modal').classList.remove('show');
        };

        // Поиск пользователей
        async function searchUsers() {
            const query = document.getElementById('user-search').value.trim();
            const results = document.getElementById('user-search-results');

            if (query.length < 2) {
                results.classList.remove('show');
                results.innerHTML = '';
                lastQuery = '';
                return;
            }

            if (query === lastQuery) return;
            lastQuery = query;

            results.innerHTML = `
                <div class="p-4 text-center text-gray-500">
                    <i data-feather="loader" class="w-5 h-5 animate-spin inline"></i> Поиск...
                </div>
            `;
            results.classList.add('show');
            feather.replace();

            try {
                const res = await fetch(`${API_BASE}/users/search?query=${encodeURIComponent(query)}`, {
                    headers: { 'Authorization': `Bearer ${token}` }
                });
                const json = await res.json();

                results.innerHTML = '';

                if (!json.data || json.data.length === 0) {
                    results.innerHTML = '<div class="p-4 text-gray-500 text-sm">Ничего не найдено</div>';
                    feather.replace();
                    return;
                }

                const availableUsers = json.data
                    .filter(u => !selectedUserIds.includes(u.id))
                    .slice(0, 8);

                if (availableUsers.length === 0) {
                    results.innerHTML = '<div class="p-4 text-gray-500 text-sm">Все уже добавлены</div>';
                    feather.replace();
                    return;
                }

                availableUsers.forEach(user => {
                    const div = document.createElement('div');
                    div.className = 'p-3 hover:bg-gray-50 cursor-pointer flex items-center gap-3 transition rounded-lg';
                    div.innerHTML = `
                        <img src="${user.avatar || 'https://static.photos/people/200x200/default'}" class="w-10 h-10 rounded-full object-cover">
                        <span class="font-medium">${user.name || 'Без имени'}</span>
                    `;

                    div.onclick = () => {
                        if (selectedUserIds.includes(user.id)) return;

                        const isPrivate = document.querySelector('input[name="chat-type"]:checked').value === 'private';
                        if (isPrivate && selectedUserIds.length >= 1) {
                            alert('В приватном чате может быть только один участник');
                            return;
                        }

                        selectedUserIds.push(user.id);

                        const tag = document.createElement('div');
                        tag.className = 'inline-flex items-center gap-2 px-3 py-2 rounded-full bg-blue-100 text-blue-800 text-sm font-medium';
                        tag.innerHTML = `
                            ${user.name || 'Пользователь'}
                            <button type="button" class="ml-2 hover:bg-blue-200 rounded-full p-0.5 transition">
                                <i data-feather="x" class="w-4 h-4"></i>
                            </button>
                        `;

                        tag.querySelector('button').onclick = (e) => {
                            e.stopPropagation();
                            selectedUserIds = selectedUserIds.filter(id => id !== user.id);
                            tag.remove();
                        };

                        document.getElementById('selected-users').appendChild(tag);
                        feather.replace();

                        document.getElementById('user-search').value = '';
                        results.classList.remove('show');
                        lastQuery = '';
                    };

                    results.appendChild(div);
                });

                feather.replace();

            } catch (err) {
                console.error('Ошибка поиска:', err);
                results.innerHTML = '<div class="p-4 text-red-500 text-sm">Ошибка связи</div>';
                feather.replace();
            }
        }

        // Обработчик ввода с дебаунсом
        document.getElementById('user-search').addEventListener('input', () => {
            clearTimeout(searchTimeout);
            searchTimeout = setTimeout(searchUsers, 300);
        });

        document.getElementById('confirm-create').onclick = async () => {
            const type = document.querySelector('input[name="chat-type"]:checked').value;
            const name = type === 'group' ? document.getElementById('chat-name').value.trim() : null;
            if (type === 'group' && !name) return alert('Введите название группы');
            if (selectedUserIds.length === 0) return alert('Выберите участников');
            if (type === 'private' && selectedUserIds.length !== 1) return alert('В приватном чате — один участник');

            try {
                const res = await fetch(`${API_BASE}/chats/create-chat`, {
                    method: 'POST',
                    headers: { 'Authorization': `Bearer ${token}`, 'Content-Type': 'application/json' },
                    body: JSON.stringify({ name, type, userIds: selectedUserIds })
                });
                const json = await res.json();
                if (!res.ok || !json.isSuccess) throw new Error(json.error || 'Ошибка');
                document.getElementById('create-chat-modal').classList.remove('show');
            } catch (err) {
                alert('Ошибка: ' + err.message);
            }
        };

        let currentChatInfo = null;
        let chatNameChanged = false;
        let participantsChanged = false;

        function openChatInfo() {
            if (!currentChatId) {
                alert('Выберите чат');
                return;
            }

            document.getElementById('chat-info-modal').classList.add('show');

            fetch(`${API_BASE}/chats/${currentChatId}`, {
                method: 'GET',
                headers: { 'Authorization': `Bearer ${token}` }
            })
            .then(r => {
                if (!r.ok) throw new Error(`HTTP ${r.status}`);
                return r.json();
            })
            .then(res => {
                if (!res.isSuccess || !res.data) throw new Error(res.error || 'Нет данных');

                const chat = res.data;
                currentChatInfo = { ...chat };

                // Аватар
                document.getElementById('modal-chat-avatar').src = chat.avatar || 'https://static.photos/people/200x200/default';

                // Название
                const nameInput = document.getElementById('modal-chat-name');
                nameInput.value = chat.name || 'Чат';
                nameInput.readOnly = chat.type !== 'group';

                // Тип
                document.getElementById('modal-chat-type').textContent =
                    chat.type === 'group' ? 'Групповой чат' : 'Приватный чат';

                // Участники
                document.getElementById('participants-count').textContent = `(${chat.participants.length})`;

                const list = document.getElementById('participants-list');
                list.innerHTML = '';

                chat.participants.forEach(p => {
                    const div = document.createElement('div');
                    div.className = 'flex items-center justify-between p-4 bg-gray-50 rounded-xl';
                    div.innerHTML = `
                        <div class="flex items-center gap-4">
                            <img src="${p.avatar || 'https://static.photos/people/200x200/default'}" class="w-12 h-12 rounded-full object-cover">
                            <div>
                                <p class="font-semibold">${p.name}</p>
                                <p class="text-xs text-gray-500">${p.id === '@Model.UserId' ? 'Вы' : ''}</p>
                            </div>
                        </div>
                        ${chat.type === 'group' && p.id !== '@Model.UserId' ? `
                        <button onclick="removeParticipant('${p.id}', this)" class="text-red-600 hover:bg-red-100 rounded-full p-2">
                            <i data-feather="x" class="w-5 h-5"></i>
                        </button>` : ''}
                    `;
                    list.appendChild(div);
                });

                feather.replace();

                // Сброс изменений
                chatNameChanged = false;
                participantsChanged = false;
                document.getElementById('save-chat-info').addEventListener('click', () => {
                    const newName = document.getElementById('modal-chat-name').value.trim();

                    fetch(`${API_BASE}/chats/${currentChatId}`, {
                        method: 'PUT',
                        headers: {
                            'Authorization': `Bearer ${token}`,
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ name: newName })
                    })
                    .then(r => r.json())
                    .then(res => {
                        if (res.isSuccess) {
                            alert('Чат обновлён');
                            document.getElementById('chat-title').textContent = newName;
                            document.getElementById('chat-info-modal').classList.remove('show');
                        } else {
                            alert('Ошибка: ' + res.error);
                        }
                    });
                });
            })
            .catch(err => {
                console.error(err);
                alert('Ошибка загрузки чата');
                document.getElementById('chat-info-modal').classList.remove('show');
            });
        }

        // Отслеживание изменений
        document.getElementById('modal-chat-name').addEventListener('input', () => {
            chatNameChanged = true;
            showSaveButton();
        });

        function showSaveButton() {
            if (chatNameChanged || participantsChanged) {
                document.getElementById('save-chat-info').classList.remove('opacity-0', 'pointer-events-none');
            } else {
                document.getElementById('save-chat-info').classList.add('opacity-0', 'pointer-events-none');
            }
        }

        function removeParticipant(userId, btn) {
            if (!confirm('Удалить участника из чата?')) return;
            currentChatInfo.participants = currentChatInfo.participants.filter(p => p.id !== userId);
            btn.closest('div').remove();
            participantsChanged = true;
            showSaveButton();
            document.getElementById('participants-count').textContent = `(${currentChatInfo.participants.length})`;
        }

        // Кнопка "Добавить участника"
        document.getElementById('add-participant-btn').addEventListener('click', () => {
            alert('Скоро будет добавление через поиск');
            // Можно подключить тот же поиск, что и в создании чата
        });

        // Сохранение изменений
        document.getElementById('save-chat-info').addEventListener('click', () => {
            const newName = document.getElementById('modal-chat-name').value.trim();
            const participantIds = currentChatInfo.participants.map(p => p.id);

            fetch(`${API_BASE}/chats/${currentChatId}/update`, {
                method: 'POST',
                headers: {
                    'Authorization': `Bearer ${token}`,
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    name: newName || null,
                    userIdsToAdd: [],
                    userIdsToRemove: [] // можно расширить
                })
            })
            .then(r => r.json())
            .then(res => {
                if (res.isSuccess) {
                    alert('Чат обновлён');
                    document.getElementById('chat-title').textContent = newName || document.getElementById('chat-title').textContent;
                    document.getElementById('chat-info-modal').classList.remove('show');
                } else {
                    alert('Ошибка: ' + (res.error || 'неизвестно'));
                }
            });
        });

        // === Инициализация ===
        loadChats();
        startSignalR();

        sendButton.onclick = sendMessage;
        messageInput.addEventListener('keydown', e => {
            if (e.key === 'Enter' && !e.shiftKey) {
                e.preventDefault();
                sendMessage();
            }
        });

        const observer = new MutationObserver(() => feather.replace());
        observer.observe(document.body, { childList: true, subtree: true });
    </script>
